<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoldenCouponz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/basic_color</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="colorPrimaryVariant">@color/basic_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewStyle">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="TextViewActive">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">@color/basic_color</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="TextViewInActive">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">#7A7A7A</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="ButtonStyle">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontWeight">500</item>
        <item name="paddingEnd">@dimen/_12sdp</item>
        <item name="paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>

    </style>
    <style name="Theme.GoldenCouponz.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GoldenCouponz.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GoldenCouponz.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>