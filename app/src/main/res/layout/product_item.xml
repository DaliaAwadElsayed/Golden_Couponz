<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/rewardLinearId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bk_product_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discountId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/ic_discount"
            android:layoutDirection="rtl"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/productId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                tools:src="@drawable/ic_second_skip" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/storeImgId"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_90sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                app:civ_border_color="@color/grey"
                app:civ_border_width="0.5dp" />

        </RelativeLayout>


        <TextView
            android:layout_gravity="start"
            android:gravity="end"
            android:id="@+id/oldPriceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textColor="#C2BDB6"
            android:textFontWeight="600"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="123333 sar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp">

            <TextView
                style="@style/TextViewBold"
                android:id="@+id/newPriceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="123333" />

            <TextView
                android:id="@+id/currencyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="123333" />

    </LinearLayout>
</layout>
