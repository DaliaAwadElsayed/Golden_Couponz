<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.goldencouponz.fragments.authentication.ProfileFragment">

    <RelativeLayout
        android:id="@+id/itemId"
        android:padding="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@drawable/bk_rate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <ImageView
                android:id="@+id/iconId"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:textColor="#7A7A7A"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

            <LinearLayout
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/linearId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/iconId"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="@string/language_label" />

                <TextView
                    android:id="@+id/detailsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearId"
                    android:layout_alignParentStart="true"
                    android:textAllCaps="false"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="@string/language_label" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/clickId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:textColor="#7A7A7A"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>
